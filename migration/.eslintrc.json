{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-restricted-imports": ["error", {
            "patterns": [{
                "group": ["features/*/**"],
                "message": "Can't import what module does not export.'"
            }]
        }],
        "react/prop-types": ["off"]
    }
}
